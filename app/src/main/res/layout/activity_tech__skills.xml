<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Tech_Skills">

    <TextView
        android:id="@+id/header_skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add your skills"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/skill_input"
        android:layout_below="@id/header_skills"
        android:layout_marginTop="50dp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/age"
        android:layout_marginBottom="30dp"
        android:background="#11000000"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:layout_centerHorizontal="true"
        android:hint="Enter skill here"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16dp" />
    <Button
        android:id="@+id/submit_skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/skill_input"
        android:text="submit"
        android:textColor="@color/white"
        android:backgroundTint="#ff7171"/>

    


</RelativeLayout>